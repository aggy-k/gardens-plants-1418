<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1>
      <%= @garden.name %>
    </h1>
  </div>
</div>

<div class="mt-5 px-4 row">
  <% @garden.plants.each do |plant| %>
    <div class="col-4">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.img %>')">
        <%= plant.name %>
        <%= link_to "+", plant_path(plant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "card-remove-link" %>
      </div>
    </div>  
  <% end %>
</div>

<div class="row mt-5">
  <div class="col-4 mx-auto">
    <%= simple_form_for([@garden, @plant]) do |f| %>
      <%= f.input :name %>
      <%= f.input :img %>
      <%= f.submit :submit %>
    <% end %>
  </div>
</div>